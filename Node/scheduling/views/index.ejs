<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./fullCalendar/main.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="./fullCalendar/main.min.js"></script>
    <title>Consultas agendadas</title>
</head>
<body>
    <%- include("./navbar.ejs") %>
    <div class="container">
        <h1 class="display-4 text-center">Consulta agendadas</h1>
        <div class="row justify-content-center align-items-center mt-5">
            <div id="calendar" class="col-12 col-md-8">

            </div>
        </div>
        
    </div>
</body>
<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
<script>
    var calendar = new FullCalendar.Calendar(document.getElementById('calendar'), {
        inialView: 'dayGridMonth',
        locale: 'pt-br',
        events: 'getAppointments',
        eventClick: function(info){
            document.location.assign(`/event/${info.event.id}`);
        }
    });

    calendar.render();
</script>
</html>